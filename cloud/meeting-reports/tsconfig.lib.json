{
  "exclude": [
    "./build/**/*",
    "**/*.spec.ts"
  ],
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "ngfactory"
  }
}
